<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/bluecloud" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/_60sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/world"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  data"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/length"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/arrows"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  length"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/scale"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  area"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/volume"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/volume"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  volume"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/mass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/load"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  mass"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/times"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  time"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/thermometer"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  temperature"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/speedometer"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  speed"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/numeral"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawableLeft="@drawable/binary"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="  numeral"
                    android:textColor="#5F7678"
                    android:textSize="@dimen/_20sdp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="... by Â§HUBH ..."
                android:paddingStart="@dimen/_10sdp"
                android:textColor="#9DB5B8"
                android:textSize="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>