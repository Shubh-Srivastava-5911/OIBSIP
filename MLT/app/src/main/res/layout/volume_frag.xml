<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unit1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/drawable"
            android:layout_weight="1"
            android:text="m³"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="#5F7678"
            android:gravity="center"/>

        <TextView
            android:id="@+id/byuser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="1"
            android:paddingEnd="@dimen/_5sdp"
            android:background="@drawable/textborder"
            android:textColor="#058FA8"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>
    <TextView
        android:id="@+id/ack1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meter cube"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_20sdp"
        android:paddingEnd="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unit2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/drawable"
            android:layout_weight="1"
            android:text="cm³"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="#5F7678"
            android:gravity="center"/>

        <TextView
            android:id="@+id/bycalc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="1,000,000"
            android:paddingEnd="@dimen/_5sdp"
            android:background="@drawable/textborder"
            android:textColor="#044853"
            android:textSize="@dimen/_20sdp" />

    </LinearLayout>
    <TextView
        android:id="@+id/ack2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Centimeter cube"
        android:gravity="end"
        android:layout_marginEnd="@dimen/_20sdp"
        android:paddingEnd="@dimen/_5sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="--------------------------------------------"
        android:textSize="@dimen/_20sdp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/_20sdp"
        android:background="#501DC8FC">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="3"
            android:layout_weight="1">

            <TextView
                android:id="@+id/seven"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="7"/>
            <TextView
                android:id="@+id/eight"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="8"/>
            <TextView
                android:id="@+id/nine"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="9"/>
            <TextView
                android:id="@+id/four"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="4"/>
            <TextView
                android:id="@+id/five"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="5"/>
            <TextView
                android:id="@+id/six"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="6"/>
            <TextView
                android:id="@+id/one"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="1"/>
            <TextView
                android:id="@+id/two"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="2"/>
            <TextView
                android:id="@+id/three"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="3"/>
            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text=" "/>
            <TextView
                android:id="@+id/zero"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text="0"/>
            <TextView
                android:id="@+id/point"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:textSize="@dimen/_30sdp"
                android:text=" ."/>

        </GridLayout>
        <LinearLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ac"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AC"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"
                android:background="@drawable/textborder"/>
            <TextView
                android:id="@+id/x"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⌫"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"
                android:background="@drawable/textborder"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>