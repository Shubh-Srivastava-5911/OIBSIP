<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Results">

    <TextView
        android:id="@+id/scoring"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/resultborder"
        android:gravity="center"
        android:text="0/5"
        android:textSize="@dimen/_40sdp"
        android:textStyle="bold" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/sidetag"
                    android:elevation="@dimen/_15sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Q1."
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="General computers have bits, Quantum computers have _____"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <RadioButton
                        android:id="@+id/op11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Q bits"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Queue bits"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="#9DFAC7"
                        android:gravity="left|center"
                        android:text="Qubits"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Cubits"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/sidetag"
                    android:elevation="@dimen/_15sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Q2."
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Who is the father of quantum computing?"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <RadioButton
                        android:id="@+id/op21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Isaac Chuang"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="David Deutsch"
                        android:background="#9DFAC7"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Philip Glass"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Neil Gershenfeld"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/sidetag"
                    android:elevation="@dimen/_15sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Q3."
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="When the information is between 0 and 1 in a quantum computer, what do we call this?"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <RadioButton
                        android:id="@+id/op31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="#9DFAC7"
                        android:gravity="left|center"
                        android:text="super-position"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op32"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="same-position"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="ordinality"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op34"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="bloch sphere"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/sidetag"
                    android:elevation="@dimen/_15sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Q4."
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Quantum computers are very good at dealing with _____"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <RadioButton
                        android:id="@+id/op41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Clarity"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op42"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Reliability"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op43"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="Certainty"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="#9DFAC7"
                        android:gravity="left|center"
                        android:text="Uncertainty"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/sidetag"
                    android:elevation="@dimen/_15sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Q5."
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="What does 'entanglement' mean?"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_40sdp">

                    <RadioButton
                        android:id="@+id/op51"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="two particles are different"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op52"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="two particles are separate"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op53"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:gravity="left|center"
                        android:text="two particles are independent"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/op54"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:background="#9DFAC7"
                        android:gravity="left|center"
                        android:text="two particles are connected"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:text="... thanks for attempting ..."
                android:textSize="@dimen/_15sdp"
                android:textStyle="italic" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>